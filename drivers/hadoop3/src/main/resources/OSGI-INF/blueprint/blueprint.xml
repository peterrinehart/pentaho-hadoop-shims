<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="hadoop3ShimIdentifier" class="org.pentaho.hadoop.shim.api.internal.ShimIdentifier" scope="singleton">
    <argument value="hadoop3"/>
    <argument value="Apache Hadoop"/>
    <argument value="3.1.1"/>
    <argument value="COMMUNITY"/>
    <argument value="none1" />
    <argument value="none2" />
  </bean>

  <service ref="hadoop3ShimIdentifier" interface="org.pentaho.hadoop.shim.api.ShimIdentifierInterface"/>

  <bean id="hadoop3Hadoop" class="org.pentaho.hadoop.shim.HadoopShim" scope="singleton"/>

  <service ref="hadoop3Hadoop" interface="org.pentaho.hadoop.shim.spi.HadoopShim">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">hadoop3</value>
      </entry>
    </service-properties>
  </service>

  <reference-list id="shimIdentifiers" interface="org.pentaho.hadoop.shim.api.ShimIdentifierInterface" availability="optional" />

  <bean id="hadoop3FileSystem" class="com.pentaho.big.data.bundles.impl.shim.hdfs.HadoopFileSystemFactoryImpl">
    <argument ref="hadoop3Hadoop"/>
    <argument ref="hadoop3ShimIdentifier"/>
    <argument ref="shimIdentifiers" />
  </bean>

  <service ref="hadoop3FileSystem" interface="org.pentaho.hadoop.shim.api.hdfs.HadoopFileSystemFactory"/>

  <bean id="hadoop3MapReduceServiceFactory" class="org.pentaho.big.data.impl.shim.mapreduce.MapReduceServiceFactoryImpl">
    <argument ref="hadoop3Hadoop"/>
    <argument ref="executorService"/>
    <argument ref="transformationVisitorList"/>
  </bean>
  <reference id="executorService" interface="java.util.concurrent.ExecutorService"/>

  <service ref="hadoop3MapReduceServiceFactory" interface="org.pentaho.hadoop.shim.api.cluster.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">hadoop3</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">mapreduce</value>
      </entry>
    </service-properties>
  </service>

  <reference-list id="transformationVisitorList" interface="org.pentaho.big.data.impl.shim.mapreduce.TransformationVisitorService"
                  availability="optional"/>

  <!-- Hadoop client services definition -->
  <bean id="hadoop3HadoopServicesFactory" class="org.pentaho.big.data.impl.shim.HadoopClientServicesFactory">
    <argument ref="hadoop3Hadoop"/>
    <argument ref="blueprintBundleContext"/>
  </bean>
  <service ref="hadoop3HadoopServicesFactory" interface="org.pentaho.hadoop.shim.api.cluster.NamedClusterServiceFactory">
    <service-properties>
      <entry key="shim">
        <value type="java.lang.String">hadoop3</value>
      </entry>
      <entry key="service">
        <value type="java.lang.String">shimservices</value>
      </entry>
    </service-properties>
  </service>
  <!-- End of Hadoop client services definition -->


</blueprint>